@model FitAsystent.Models.HealthRecord
@{
    ViewData["Title"] = "Edycja wpisu";
}

<h2 class="mb-4">Edytuj pomiar z @Model.DataPomiaru.ToString("dd.MM.yyyy")</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edytuj" method="post" class="card p-4 shadow-sm">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label>Waga (kg):</label>
                <input asp-for="Waga" class="form-control" type="number" step="0.1" />
            </div>
            <div class="mb-3">
                <label>Wzrost (cm):</label>
                <input asp-for="Wzrost" class="form-control" type="number" />
            </div>
            <div class="mb-3">
                <label>Wiek:</label>
                <input asp-for="Wiek" class="form-control" type="number" />
            </div>
            <div class="mb-3">
                <label>Płeć:</label>
                <select asp-for="Plec" class="form-control">
                    <option value="Mezczyzna">Mężczyzna</option>
                    <option value="Kobieta">Kobieta</option>
                </select>
            </div>

            <button type="submit" class="btn btn-success w-100 mb-2">Zapisz poprawki</button>
            <a asp-action="Historia" class="btn btn-secondary w-100">Anuluj</a>
        </form>
    </div>
</div>