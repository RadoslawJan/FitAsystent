@model IEnumerable<FitAsystent.Models.HealthRecord>
@{
	ViewData["Title"] = "Historia";
}
<h2 class="mb-4">Twoja historia pomiarów</h2>
<table class="table table-striped table-hover shadow-sm">
	<thread class="table-dark">
		<tr>
			<th>Data</th>
			<th>Waga (kg)</th>
			<th>BMI</th>
			<th>Wynik</th>
			<th>BMR</th>
			<th>Akcje</th>
		</tr>
	</thread>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.DataPomiaru.ToString("dd.MM.yyyy HH:mm")</td>
				<td>@item.Waga</td>
				<td>@item.BMI</td>
				<td>@item.WynikBMI</td>
				<td>@item.ZapotrzebowanieKaloryczne</td>
				<td>
					<a asp-action="Edytuj" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edytuj</a>
					<form asp-action="Usun" asp-route-id="@item.Id" method="post" class="d-inline">
						<button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Czy na pewno chcesz usunąć ten pomiar');">Usuń</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>